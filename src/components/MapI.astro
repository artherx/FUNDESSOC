---

import { useGetTranslate } from "@text/tradu";
import Texto from "./Texto";
---

<div class="bg-slate-800 w-full flex justify-center py-16">
    <div id="map" class="w-[90%] max-w-4xl bg-white p-8 rounded-lg shadow-lg flex flex-col gap-6 items-center">
        
        <h1 class="text-6xl text-slate-700 font-semibold text-center mb-4">
            <Texto client:only>
                        
                {useGetTranslate("MapI.title")}
            </Texto>
        </h1>

        <div class="w-full h-[450px]">
            <iframe
                src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3968.4694443646868!2d-73.62070338969042!3d5.929832429753122!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8e41e5b7567d2d17%3A0xebe3484273eee3d9!2sCl.%207%20%238-45%2C%20Barbosa%2C%20Santander!5e0!3m2!1ses-419!2sco!4v1737062670316!5m2!1ses-419!2sco"
                width="100%" height="100%" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"
                class="rounded-lg shadow-md"
            ></iframe>
        </div>
    </div>
</div>
