---
import text from "@text/es/index.json";
import { useGetTranslate } from "@text/tradu";

import Texto from "./Texto.tsx";
---

<section id="About" class="flex bg-slate-700 w-full justify-center py-10">
    <div class="flex flex-col items-center gap-8 w-[75%]">
        <!-- Título de la sección -->
        <h2 class="text-6xl text-white font-bold text-center">
            

                {useGetTranslate('About.title')}
            
        </h2>

        <!-- Contenedor de las cartas -->
        <div class="flex flex-wrap justify-center gap-8">
            <!-- Carta: Misión -->
            <article class="bg-white rounded-lg shadow-lg p-6 max-w-xs text-center">
                <h3 class="text-2xl font-semibold text-gray-800 mb-4">
                    

                        {useGetTranslate('About.mission.title')}
                    
                </h3>
                <p class="text-gray-600 text-sm leading-relaxed text-start">
                    

                        {useGetTranslate('About.mission.body')}
                    
                </p>
            </article>

            <!-- Carta: Visión -->
            <article class="bg-white rounded-lg shadow-lg p-6 max-w-xs text-center">
                <h3 class="text-2xl font-semibold text-gray-800 mb-4">
                    
                        
                        {useGetTranslate('About.vision.title')}
                    
                </h3>
                <p class="text-gray-600 text-sm leading-relaxed text-start">
                    
                        
                        {useGetTranslate('About.vision.body')}
                    
                </p>
            </article>
        </div>
    </div>
</section>
